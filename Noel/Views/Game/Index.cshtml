<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Noel Baba Atlama Oyunu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f0f8ff;
            margin: 0;
            padding: 0;
        }

        #gameArea {
            position: relative;
            width: 800px;
            height: 400px;
            margin: 20px auto;
            background-color: #e0ffff;
            border: 2px solid #000;
            overflow: hidden;
        }

        #noelBaba {
            position: absolute;
            width: 50px;
            height: 50px;
            bottom: 50px;
            left: 100px;
            background: url('/images/noelbaba.png') no-repeat center;
            background-size: cover;
        }

        .car {
            position: absolute;
            width: 60px;
            height: 40px;
            bottom: 50px;
            background: url('/images/car.png') no-repeat center;
            background-size: cover;
        }

        #score {
            margin-top: 10px;
            font-size: 24px;
            font-weight: bold;
            color: #228b22;
        }

        #instructions {
            font-size: 16px;
            margin-top: 10px;
            color: #555;
        }

        /* Kutlama Mesajı */
        #celebrationMessage {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 36px;
            font-weight: bold;
            color: #ff4500;
            text-shadow: 2px 2px 4px #000;
            z-index: 1000;
        }

        /* Kar Yağışı */
        .snowflake {
            position: fixed;
            top: -10px;
            color: white;
            font-size: 24px;
            animation: fall linear infinite;
            z-index: 999;
        }

        @@keyframes fall {
            0%

        {
            transform: translateY(0);
        }

        100% {
            transform: translateY(100vh);
        }

        }

        /* Animasyonlu Mesaj */
        #authorMessage {
            position: fixed;
            top: 10px;
            right: 10px;
            font-size: 16px;
            color: #ff4500;
            animation: fadeInOut 2s infinite;
        }

        @@keyframes fadeInOut {
            0%, 100%

        {
            opacity: 0;
        }

        50% {
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <h1>Noel Baba Atlama Oyunu</h1>
    <div id="instructions">Boşluk tuşuyla zıpla ve arabaların üzerinden geç!</div>
    <div id="score">Puan: 0</div>
    <div id="gameArea">
        <div id="noelBaba"></div>
    </div>

    <!-- Kutlama Mesajı -->
    <div id="celebrationMessage">🎉 Mutlu Yıllar! 🎉<br>Yeni yılınız mutluluk ve başarı getirsin!</div>

    <!-- Animasyonlu Mesaj -->
    <div id="authorMessage">Yapımcı: <strong>Ali Aykan Avşar</strong></div>

    <script>
        const noelBaba = document.getElementById("noelBaba");
        const gameArea = document.getElementById("gameArea");
        const celebrationMessage = document.getElementById("celebrationMessage");
        let score = 0;
        let jumping = false;
        let carSpeed = 5; // Arabaların başlangıç hızı

        // Zıplama Hareketi
        document.addEventListener("keydown", (e) => {
            if (e.code === "Space" && !jumping) {
                jumping = true;
                let jumpHeight = 20;
                let jumpCount = 0;

                const jumpInterval = setInterval(() => {
                    const bottom = parseInt(window.getComputedStyle(noelBaba).getPropertyValue("bottom"));

                    if (jumpCount < jumpHeight) {
                        noelBaba.style.bottom = bottom + 5 + "px";
                    } else if (jumpCount < jumpHeight * 2) {
                        noelBaba.style.bottom = bottom - 5 + "px";
                    } else {
                        clearInterval(jumpInterval);
                        jumping = false;
                    }
                    jumpCount++;
                }, 20);
            }
        });

        // Araba Oluşturma
        function createCar() {
            const car = document.createElement("div");
            car.classList.add("car");
            car.style.left = "800px";
            gameArea.appendChild(car);

            const carInterval = setInterval(() => {
                const carLeft = parseInt(window.getComputedStyle(car).getPropertyValue("left"));
                const noelBabaBottom = parseInt(window.getComputedStyle(noelBaba).getPropertyValue("bottom"));

                // Arabanın Hareketi
                if (carLeft > 0) {
                    car.style.left = carLeft - carSpeed + "px";
                } else {
                    car.remove();
                    clearInterval(carInterval);
                    score++;
                    document.getElementById("score").innerText = `Puan: ${score}`;
                    if (score % 5 === 0) {
                        carSpeed += 1;
                    }
                }

                // Çarpışma Kontrolü
                if (
                    carLeft < 150 &&
                    carLeft > 50 &&
                    noelBabaBottom < 90
                ) {
                    endGame();
                }
            }, 20);
        }

        // Oyun Bitişi ve Kutlama
        function endGame() {
            // Kutlama Mesajı Göster
            celebrationMessage.style.display = "block";

            // Kar Efekti Başlat
            startSnow();

            // Oyun Alanını Dondur
            clearInterval(carInterval);
        }

        // Kar Yağışı
        function startSnow() {
            for (let i = 0; i < 100; i++) {
                const snowflake = document.createElement("div");
                snowflake.classList.add("snowflake");
                snowflake.innerHTML = "❄️";
                snowflake.style.left = Math.random() * 100 + "vw";
                snowflake.style.animationDuration = Math.random() * 3 + 2 + "s";
                document.body.appendChild(snowflake);

                setTimeout(() => {
                    snowflake.remove();
                }, 5000);
            }
        }

        // Arabaları Başlat
        function startGame() {
            setInterval(() => {
                createCar();
            }, Math.random() * 2000 + 1000);
        }

        startGame();
    </script>
</body>
</html>
